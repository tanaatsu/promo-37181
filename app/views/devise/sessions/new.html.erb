<!doctype html>
<html lang="en">
  
  <%= render 'posts/header' %>

 <div class="container-main">
   <%= form_with model: @user, url: new_user_session_path ,method: :POST,  class: 'registration-main', local: true do |f| %>

   <div class='form-wrap'>
     <div class='form-header'>
       <h3 class='form-header-text'>
         ログイン
       </h3>
     </div>
    <div class='login-flash-message'>
      <%= flash[:notice] %>
      <%= flash[:alert] %>
    </div>
    
    <%= link_to "Facebook", user_facebook_omniauth_authorize_path, method: :post, class:"facebook" %>または
     <%= link_to "Google", user_google_oauth2_omniauth_authorize_path, method: :post,class:"google" %>でログイン
    <div class="form-group">
     <div class='form-text-wrap'>
        <label class="form-text">メールアドレス</label>
        <span class="indispensable">(必須)</span>
     </div>
     <%= f.email_field :email, class:"input-default", id:"email", placeholder:"PC・携帯どちらでも可", autofocus: true %>
    </div>
    <div class="form-group">
      <div class='form-text-wrap'>
        <label class="form-text">パスワード</label>
        <span class="indispensable">(必須)</span>
      </div>
      <%= f.password_field :password, class:"input-default", id:"password", placeholder:"6文字以上の半角英数字" %>
      <p class='info-text'>※英字と数字の両方を含めて設定してください</p>
    </div>

   <div class='d-grid gap-2'>
      <%= f.submit "ログイン" ,class:"btn btn-primary" %>
   </div>
  </div>
  <% end %>
 </div>
 <div class="footer-sign-in">
 </div>

 <%= render 'posts/footer' %>
   
</html>