    <!-- Bootstrap core CSS -->
   <link href="../assets/dist/css/bootstrap.min.css" rel="stylesheet">

    <style>
      .bd-placeholder-img {
        font-size: 1.125rem;
        text-anchor: middle;
        -webkit-user-select: none;
        -moz-user-select: none;
        user-select: none;
      }

      @media (min-width: 768px) {
        .bd-placeholder-img-lg {
          font-size: 3.5rem;
        }
      }
    </style>

    
  </head>
  <body>
  <header>
  <div class="navbar navbar-dark bg-dark shadow-sm">
    <div class="container">
      <%= link_to "PromoApp", root_path, class:"navbar-brand d-flex align-items-center" %>
      <div>
       <%= link_to "ログイン", new_user_session_path, class:"btn btn-secondary my-2" %>
       <%= link_to "新規登録", new_user_registration_path, class:"btn btn-primary my-2" %>
      </div>
    </div>
  </div>
</header>

 

<div class="container-main">
 <%= form_with model: @user, url: new_user_session_path ,method: :POST,  class: 'registration-main', local: true do |f| %>

 <div class='form-wrap'>
    <div class='form-header'>
     <h3 class='form-header-text'>
      ログイン
     </h3>
    </div>

   <%#= render  'shared/error_messages', model: f.object %>
  
   <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">メールアドレス</label>
      <span class="indispensable">(必須)</span>
    </div>
    <%= f.email_field :email, class:"input-default", id:"email", placeholder:"PC・携帯どちらでも可", autofocus: true %>
   </div>
   <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">パスワード</label>
      <span class="indispensable">(必須)</span>
    </div>
    <%= f.password_field :password, class:"input-default", id:"password", placeholder:"6文字以上の半角英数字" %>
    <p class='info-text'>※英字と数字の両方を含めて設定してください</p>
   </div>

   <div class='d-grid gap-2'>
     <%= f.submit "会員登録" ,class:"btn btn-primary" %>
   </div>
 </div>
 <% end %>
</div>
<script src="../assets/dist/js/bootstrap.bundle.min.js"></script>

<div class="footer-sign-in">
</div>
      
  </body>
</html>